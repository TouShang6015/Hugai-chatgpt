<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hugai.modules.system.mapper.SysMenuMapper">

    <resultMap type="com.hugai.modules.system.entity.model.SysMenuModel" id="baseMap">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="createOper" column="create_oper"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateOper" column="update_oper"/>
        <result property="delFlag" column="del_flag"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="query" column="query"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="status" column="status"/>
        <result property="icon" column="icon"/>
        <result property="sort" column="sort"/>
        <result property="name" column="name"/>
    </resultMap>

    <resultMap type="com.hugai.modules.system.entity.dto.SysMenuDTO" id="dtoMap">

    </resultMap>

    <select id="selectMenuListByUserId" resultType="com.hugai.modules.system.entity.model.SysMenuModel">
        select
            m.*
        from sys_menu m
        left join sys_role_menu rm on m.id = rm.menu_id
        left join sys_user_role ur on rm.role_id = ur.role_id
        left join sys_role ro on ur.role_id = ro.id
        where ur.user_id = #{userId}
        <if test="menuName != null and menuName != ''">
            AND m.menu_name like concat('%', #{menuName}, '%')
        </if>
        <if test="visible != null and visible != ''">
            AND m.visible = #{visible}
        </if>
        <if test="status != null and status != ''">
            AND m.status = #{status}
        </if>
        order by m.parent_id, m.order_num
    </select>

    <select id="selectMenuListByRoleId" resultType="java.lang.Long">
        select
            m.id
        from sys_menu m
        left join sys_role_menu rm on m.id = rm.menu_id
        where rm.role_id = #{roleId}
        <if test="menuCheckStrictly">
            and m.id not in (select m.parent_id from sys_menu m inner join sys_role_menu rm on m.id = rm.menu_id and rm.role_id = #{roleId})
        </if>
        order by m.parent_id, m.order_num
    </select>

</mapper>